<div class="govuk-tabbed-panel">

  <h2 class="govuk-tabbed-panel__title">
    {% if params.title %}
      {{params.title}}
    {% else %}
      Contents
    {% endif %}
  </h2>

  <ul class="govuk-tabbed-panel__list">
    {% for tab in params.tabs %}
      <li class="govuk-tabbed-panel__list-item">
        <a class="govuk-tabbed-panel__tab" href="#{{tab.id}}">
          {{tab.label}}
        </a>
      </li>
    {% endfor %}
  </ul>

  {% for tab in params.tabs %}
    <section class="govuk-tabbed-panel__content js-hidden" id="{{tab.id}}">
      {{tab.panel.html | safe }}
    </section>
  {% endfor %}

</div>