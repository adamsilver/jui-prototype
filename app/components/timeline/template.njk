<div class="jui-timeline{% if params.classes %} {{ params.classes }}{% endif %}">

  {% for event in params.events %}
  <div class="jui-timeline__item">

    <div class="jui-timeline__content">

      <div class="jui-timeline__event">

        {%- if params.isPageSpecific %}
          <h2>{{event.title}}</h2>
        {% else %}
          <h3>{{event.title}}</h3>
        {% endif %}
        {% if event.by %}
          <p class="jui-timeline__meta">by {{event.by}}</p>
        {% endif %}
        <p>
          <time datetime="{{event.date | date('YYYY-MM-DDTHH:mm')}}">{{event.date | govDate }} at {{event.date | govTime }}</time>
        </p>

      </div>

    </div>

  </div>
  {% endfor %}

</div>